{
  "name": "@rubixstudios/payload-usesend",
  "version": "1.0.7",
  "description": "Official PayloadCMS adapter for sending emails via the Usesend API (previously Unsend).",
  "homepage": "https://rubixstudios.com.au",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubix-studios-pty-ltd/payload-usesend.git",
    "directory": "packages/payload-usesend"
  },
  "bugs": {
    "url": "https://github.com/rubix-studios-pty-ltd/payload-usesend/issues"
  },
  "keywords": [
    "payload",
    "payloadcms",
    "payload-plugin",
    "payloadcms-v3",
    "payloadcms-3",
    "payload-adapter",
    "usesend",
    "unsend",
    "email",
    "email-adapter",
    "transactional-email",
    "plugin",
    "cms",
    "adapter",
    "rubixstudios"
  ],
  "license": "MIT",
  "author": "Rubix Studios <hello@rubixstudios.com.au> (https://rubixstudios.com.au)",
  "maintainers": [
    {
      "name": "Rubix Studios",
      "email": "hello@rubixstudios.com.au",
      "url": "https://rubixstudios.com.au"
    }
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc-build --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "release:patch": "pnpm clean && pnpm build && pnpm version patch -m \"chore(release): %s\" && pnpm publish --access public",
    "release:minor": "pnpm clean && pnpm build && pnpm version minor -m \"chore(release): %s\" && pnpm publish --access public",
    "release:major": "pnpm clean && pnpm build && pnpm version major -m \"chore(release): %s\" && pnpm publish --access public",
    "clean": "rimraf -g {dist,*.tsbuildinfo}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update": "pnpm update --latest && pnpm install && pnpm prune && pnpm dedupe",
    "prepublishOnly": "pnpm clean && pnpm turbo build",
    "test": "jest"
  },
  "dependencies": {
    "@payloadcms/eslint-config": "^3.28.0"
  },
  "devDependencies": {
    "@jest/globals": "30.1.2",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.8",
    "ts-jest": "^29.4.1",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "payload": "^3.28.1"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "pnpm": {
    "overrides": {
      "@eslint/plugin-kit": "^0.3.4",
      "@typescript-eslint/parser": "^8.43.0",
      "@typescript-eslint/eslint-plugin": "^8.43.0",
      "@typescript-eslint/typescript-estree": "^8.43.0"
    }
  },
  "packageManager": "pnpm@10.15.1"
}
