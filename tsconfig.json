{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "types": ["jest", "node", "@types/jest"],
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./dev/next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}